<html>
<body>
<h3 style="text-align: center;">Library</h3>
<div>
    <form method="post">
        <input type="text" name="name" placeholder="Название книги" required/>
        <input type="text" name="author" placeholder="Название автора" required/>
        <input type="number" name="year" placeholder="Год написания" required/>
        <input type="text" name="description" placeholder="Краткое описание книги" required/>
        <button type="submit">Добавить книгу</button>
    </form>
</div>
<div>
    Поиск книг
</div>
<form method="post" action="filter">
    <input type="text" name="filter" placeholder="Введите название" >
    <button type="submit">Поиск</button>
</form>
<div>
    Список книг
</div>
{{#books}}
<div>
<b>{{id}}</b>
<span>{{name}}</span>
<i>{{author}}</i>
<i>{{year}}</i>
    <a>{{description}}</a>
</div>
{{/books}}
<div style="padding-top: 30px;">
    <form method="post" action="addLibrary">
        <input type="text" name="library" placeholder="Название библиотеки" required/>
        <button type="submit">Добавить библиотеку</button>
    </form>
<div>
    Список библиотек
</div>
{{#libraries}}
    <div>
        <b>{{id}}</b>
        <span>{{name}}</span>
    </div>
{{/libraries}}
</div>
</body>
</html>